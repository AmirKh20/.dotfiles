#!/bin/bash

help (){
echo "Usage: sc-record [Option]
      Options:

          -both     record both mic and speaker(input and output)
          -input    record only input audio
          -output   record only output audio
          --help    Show this message"
exit "$1"
}

input_index=$(pactl list short sources | awk '/input/ {print $1}')
output_index=$(pactl list short sources | awk '/output/ {print $1}')

case "$1" in
  -input) ffmpeg -f x11grab -i :0.0 -f pulse -i "${input_index}" output.mkv
          ;;
  -output) ffmpeg -f x11grab -i :0.0 -f pulse -i "${output_index}" output.mkv
          ;;
  -both) pactl load-module module-loopback &&
  ffmpeg -f x11grab -i :0.0 -f pulse -i "${output_index}" output.mkv &&
  pactl unload-module module-loopback
          ;;
  --help) help 0
          ;;
  *) help 1
          ;;
esac


