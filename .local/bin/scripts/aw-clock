#!/bin/sh

clock=$(date '+%I')

case "$clock" in
	"00") icon="ðŸ•›" ;;
	"01") icon="ðŸ•" ;;
	"02") icon="ðŸ•‘" ;;
	"03") icon="ðŸ•’" ;;
	"04") icon="ðŸ•“" ;;
	"05") icon="ðŸ•”" ;;
	"06") icon="ðŸ••" ;;
	"07") icon="ðŸ•–" ;;
	"08") icon="ðŸ•—" ;;
	"09") icon="ðŸ•˜" ;;
	"10") icon="ðŸ•™" ;;
	"11") icon="ðŸ•š" ;;
	"12") icon="ðŸ•›" ;;
esac

#jcal-git is needed
which jdate >>/dev/null && jal_date=$(jdate +'%m-%d %a %R') || exit 1
echo "$jal_date" "$icon"
